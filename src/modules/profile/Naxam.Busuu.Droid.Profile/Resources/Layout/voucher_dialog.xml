<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="48dp"
    android:layout_marginRight="48dp"
    android:layout_gravity="center"
    >

    <com.example.customalertdialogtutorial.AutoResizeTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:textSize="100dp"
        android:maxLines="1"
        android:text="Insert your voucher here:"
        /> <!-- maximum size -->
    <EditText
        android:layout_marginTop="32dp"
        android:id="@+id/edtCode"
        android:layout_below="@id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtSubmit"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:layout_below="@id/edtCode"
        android:layout_alignParentEnd="true"
        android:text="SUBMIT"
        android:textColor="#0567B0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_below="@id/edtCode"
        android:layout_marginTop="32dp"
        android:textColor="#0567B0"
        android:textStyle="bold"
        android:layout_marginRight="48dp"
        android:layout_toLeftOf="@id/txtSubmit"
        android:text="CANCCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>