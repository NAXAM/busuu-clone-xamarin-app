<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="144dp"
      android:background="#F8F9FB"
      android:gravity="center">

    <ImageView
        android:id="@+id/imgFlag"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@color/colorTextPrimary" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorWhite"
      android:orientation="vertical"
      android:padding="16dp">

    <TextView

        style="@style/StyleTextTitleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure?" />

    <TextView
        android:id="@+id/txtContent"
        style="@style/StyleTextSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Looks like you speak English already, are you sure you want to LEARN this language ?" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorWhite"
      android:gravity="right"
      android:orientation="horizontal"
      android:padding="16dp">

    <Button
        android:id="@+id/btnCancel"
        style="@style/StyleButtonConfirmDialog"
        android:layout_width="wrap_content"
        android:text="cancel" />

    <Button
        android:id="@+id/btnContinue"
        style="@style/StyleButtonConfirmDialog"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="continue" />
  </LinearLayout>
</LinearLayout>
