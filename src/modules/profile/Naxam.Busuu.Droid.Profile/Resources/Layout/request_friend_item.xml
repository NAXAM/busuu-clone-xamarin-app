<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffff"
    android:layout_marginBottom="16dp"
    >
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="80dp"
        android:padding="16dp"
        android:layout_height="80dp"
        app:MvxBind="Source Photo"
        />
    <TextView
        android:layout_toRightOf="@id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
         app:MvxBind="Text Name"
        style="@style/StyleTextTitleBold"
        />
    <TextView
        android:id="@+id/txtNumberRequest"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center" 
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        style="@style/StyleTextTitleBold"
        app:MvxBind="Text Count"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="-24dp"
        android:padding="36dp"
        android:layout_toLeftOf="@id/txtNumberRequest" 
        android:src="@drawable/background_circle_red"
        />
</RelativeLayout>
