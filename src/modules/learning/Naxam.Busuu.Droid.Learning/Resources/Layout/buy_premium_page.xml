<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:local="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp" 
        android:layout_marginBottom="8dp"
        android:background="#ffffff">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_vertical|start"
          android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 MONTH"
            android:textSize="24dp"
            android:textColor="#000000"
            local:MvxBind="Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscription"
            android:textColor="#80000000"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_vertical|end"
          android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ121,000.00"
            android:textSize="24dp"
            android:textColor="#3BA4F0"
            android:layout_gravity="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="per month"
            android:textColor="#80000000"/>
      </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ffffff">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_vertical|start"
          android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 MONTHS"
            android:textSize="24dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscription đ640,000.00 "
            android:textColor="#80000000"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_vertical|end"
          android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ106,666.67"
            android:textSize="24dp"
            android:textColor="#3BA4F0"
            android:layout_gravity="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="per month"
            android:textColor="#80000000"/>
      </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FEAB35">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="24dp"
          android:layout_marginLeft="8dp">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BEST VALUE"
        android:layout_gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="12dp"/>
      </LinearLayout>

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_gravity="start|bottom"
          android:background="@drawable/premium_card_background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="16dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12 MONTHS"
              android:textSize="24dp"
              android:textColor="#000000"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Subscription đ495,000.00"
              android:textColor="#80000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="16dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="đ41,250.00"
              android:textSize="24dp"
              android:textColor="#FEAB35"
              android:layout_gravity="end"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="per month"
              android:textColor="#80000000"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_old_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="đ82,500.00"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#80000000"/>
      </FrameLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Automatic renewal, you can cancel anytime through the Play Store"
         android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>
    <TextView
       android:id="@+id/txtRestorePurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTORE PURCHASES"
        android:textColor="#3CA3EE"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>
  </LinearLayout>

</ScrollView>