<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/conversation_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
  <ImageView
      android:id="@+id/conversation_im_avata"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_margin="16dp"
      app:MvxBind="Source 'https://www.smashingmagazine.com/wp-content/uploads/2015/06/10-dithering-opt.jpg'"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <TextView
        android:id="@+id/conversation_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jack"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:MvxBind="Text PersonalName"/>
    <TextView
        android:id="@+id/conversation_tv_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!!!!!!!!!!!!!!!!!!!"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:MvxBind="Text Sentence"/>
  </LinearLayout>
</LinearLayout>